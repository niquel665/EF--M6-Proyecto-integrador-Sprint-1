{{#> layout title="Dashboard - KanbanPro"}}
  <h1>Dashboard</h1>

  {{#each boards}}
    <section class="board">
      <h2>{{name}}</h2>

      <div class="kanban-grid">
        {{#each lists}}
          <div class="kanban-col">
            <h3 class="kanban-col__title">{{title}}</h3>

            <ul class="kanban-cards">
              {{#each cards}}
                <li class="kanban-card">{{title}}</li>
              {{/each}}
            </ul>

            <form method="POST" action="/nueva-tarjeta" class="new-card">
              <input type="hidden" name="boardId" value="{{../id}}">
              <input type="hidden" name="listId" value="{{id}}">
              <input name="title" placeholder="Nueva tarea..." required>
              <button type="submit">Agregar</button>
            </form>
          </div>
        {{/each}}
      </div>
    </section>
  {{/each}}
{{/layout}}